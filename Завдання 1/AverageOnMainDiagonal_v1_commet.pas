program MainDiagonalAverage;  { Оголошення програми з назвою MainDiagonalAverage }

uses crt;  { Підключення модуля crt для роботи з екраном та клавіатурою }

var
  matrix: array[1..100, 1..100] of real;  { Оголошення двовимірного масиву для збереження елементів матриці }
  n, i, j: integer;                       { Змінні для розміру матриці (n) та циклів (i, j) }
  sum: real;                              { Змінна для збереження суми елементів головної діагоналі }
  average: real;                          { Змінна для збереження середнього арифметичного елементів діагоналі }

begin
  clrscr;  { Очищення екрану перед початком роботи програми }

  { Введення розміру матриці }
  write('Введіть розмірність матриці (n): ');  { Виведення запиту для користувача }
  readln(n);  { Зчитування розміру матриці (n) від користувача }

  { Введення елементів матриці }
  writeln('Введіть елементи матриці: ');  { Виведення інструкції для введення елементів }
  for i := 1 to n do  { Зовнішній цикл для проходження по рядках матриці }
    for j := 1 to n do  { Внутрішній цикл для проходження по стовпцях матриці }
    begin
      write('matrix[', i, ',', j, ']: ');  { Виведення запиту для введення елемента матриці }
      readln(matrix[i, j]);  { Зчитування значення елемента матриці від користувача }
    end;

  { Обчислення суми елементів головної діагоналі }
  sum := 0;  { Ініціалізація змінної для суми }
  for i := 1 to n do  { Цикл для проходження по елементах головної діагоналі }
    sum := sum + matrix[i, i];  { Додавання значення елемента головної діагоналі до суми }

  { Обчислення середнього арифметичного }
  average := sum / n;  { Обчислення середнього арифметичного, ділячи суму на кількість елементів }

  { Виведення результату }
  writeln('Середнє арифметичне елементів на головній діагоналі: ', average:0:2);  { Виведення результату з форматуванням до двох знаків після коми }

  readln;  { Затримка виконання програми для перегляду результату }
end.
